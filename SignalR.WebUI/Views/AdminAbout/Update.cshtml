@model UpdateAboutDto
@{
    ViewData["Title"] = "Hakkımızda Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card">
    <div class="card-header">
        <h3 class="card-title"> Hakkımızda Güncelle</h3>
    </div>
    <div class="card-body">
        <form method="post">
            <input  type="hidden" asp-for="AboutId" />
            <label>Başlık</label>
            <input type="text" asp-for="Title" class="form-control" />
            <br />
            <label>Açıklama</label>
            <textarea type="text" asp-for="Description" class="form-control" rows="5"></textarea>
            <br />
            <label>Resim URL</label>
            <input type="text" asp-for="ImageUrl" class="form-control" />
            <br />
            <button type="submit" class="btn btn-outline-info">Güncelle</button>
        </form>
    </div>
</div>