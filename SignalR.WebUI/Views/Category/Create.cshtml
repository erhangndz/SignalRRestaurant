@model CreateCategoryDto
@{
    ViewData["Title"] = "Yeni Kategori Oluştur";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Yeni Kategori Oluştur</h3>
    </div>
    <div class="card-body">
        <form method="post">
            <label>Kategori Adı</label>
            <input type="text" asp-for="CategoryName" class="form-control" />
            <br />
            <button type="submit" class="btn btn-outline-primary btn-round">Kaydet</button>
        </form>
    </div>
</div>