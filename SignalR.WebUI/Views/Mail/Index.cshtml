@model CreateMailDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<head>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/6/tinymce.min.js" referrerpolicy="origin">
    </script>

    <script src="~/js/tinymce/js/tinymce/tinymce.min.js" referrerpolicy="origin">
    </script>


    <script>

        tinymce.init({
            selector: 'textarea',  // change this value according to your HTML
            plugins: 'a_tinymce_plugin',
            a_plugin_option: true,
            a_configuration_option: 400
        });
    </script>

   
</head>



<body>

    
<h3 class="page-title">Mail Sayfası</h3>
<div class="card">


    <div class="card-body">
        <div class="card-header">
            <h5 class="card-title">Email Gönderme Paneli</h5>
        </div>



     <form method="post">
            <label>Alıcı Email Adresi</label>
            <input type="text" asp-for="ReceiverMail" class="form-control" required />
            <br />
            <label>Konu</label>
            <input type="text" asp-for="Subject" class="form-control" required />
            <br />
           
                <label class="form-label" asp-for="Body"></label>
                <div>
                    <textarea asp-for="Body" class="form-control"></textarea>
                    <span asp-validation-for="Body" class="text-danger"></span>
                </div>
        
            <br />

            <p style="background-color:red"> @Html.ValidationSummary()</p>


            <button onclick="sendMail()" class="btn btn-outline-primary btn-round"><i class="la la-envelope"></i> Gönder</button>
        </form> 




    </div>


</div>

<script>
    function sendMail() {
        Swal.fire({

            title: 'Tebrikler!',
            text: 'Email Gönderme İşlemi Başarılı.',
            icon: 'success',
            showCancelButton: false,
            confirmButtonText: 'Tamam',
            cancelButtonText: 'İptal'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = "/Statistics/Index" // Yönlendirilecek URL'yi buraya yazın
            }
        });
    }
</script>

</body>



    
