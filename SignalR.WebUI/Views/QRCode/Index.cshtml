@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">QR Kod İşlemleri</h3>
    </div>
   
    <div class="card-body">
        <form method="post" asp-controller="QRCode" asp-action="Index">
            <input type="text" name="value"  />
            <input type="submit" value="QR Kod Oluştur" class="btn btn-warning" />


            <br /><br />

            @if (ViewBag.qrCodeImage != null)
        {
                <img src="@ViewBag.qrCodeImage" alt="" style="width:400px;height:400px" />
        }

        </form>


    </div>
</div>