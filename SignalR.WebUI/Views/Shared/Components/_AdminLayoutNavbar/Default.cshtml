	<script type="text/javascript">

		$(document).ready(() => {
			var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7135/SignalRHub").build();

			$("#connstatus").text(connection.state);


			connection.start().then(() => {
				$("#connstatus").text(connection.state);

				setInterval(() => {
					connection.invoke("SendNotifications");
				}, 1000);



			}).catch((err) => {
				console.log(err)
			});



			connection.on("ReceiveUnreadNotifications", (unreadNotifications) => {

				$("#unreadNotifications").text(unreadNotifications);

			});

			connection.on("ReceiveUnreadNotificationList", (unreadNotificationList) => {
				$("#notilist").empty();
				for (var i = 0; i < unreadNotificationList.length; i++) {
					$("#notilist").append(`<a href="#">
															<div class="notif-icon ${unreadNotificationList[i].type}" > <i class="${unreadNotificationList[i].icon}" > </i> </div>
					 		<div class="notif-content" >
					 			<span class="block" >
									 ${unreadNotificationList[i].description}
					 				</span>
											<span class="time" >  ${unreadNotificationList[i].date} </span>
					 					</div>
					 					</a>
					 
					 `);
				}

			});

