@model UpdateSocialMediaDto
@{
    ViewData["Title"] = "Sosyal Medya Hesabı Güncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title"> Sosyal Medya Hesabı Güncelle</h3>
    </div>
    <div class="card-body">
        <form method="post">
            <input type="hidden" asp-for="SocialMediaId" />
            <label>Sosyal Medya Adı</label>
            <input type="text" asp-for="Title" class="form-control" />
            <br />
            <label>Sosyal Medya URL</label>
            <input type="text" asp-for="Url" class="form-control" />
            <br />
            <label>Sosyal Medya İkonu</label>
            <input type="text" asp-for="Icon" class="form-control" />
            <br />

            <button type="submit" class="btn btn-outline-info btn-round">Güncelle</button>
        </form>
    </div>
</div>


